{
    "files.watcherExclude": {
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/node_modules/**": true,
        
        "**/venv/**": true
    },
    "python.pythonPath": "${workspaceFolder}/venv/bin/python",
    "python.linting.pylintArgs": [
        "--load-plugins=pylint_django"
    ]
}